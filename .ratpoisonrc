startup_message off

escape C-q

unbind o
bind o only

unbind T
bind T prev
unbind t
bind t next

unbind h
unbind j
unbind k
unbind l

bind h focusleft
bind l focusright
bind j focusup
bind k focusdown

unbind H
unbind J
unbind K
unbind L

bind H focusleft
bind L focusright
bind J focusup
bind K focusdown

unbind C-h
unbind C-j
unbind C-k
unbind C-l

bind C-h exchangeleft
bind C-l exchangeright
bind C-j exchangeup
bind C-k exchangedown

bind - split
bind bar hsplit

unbind x
bind x quit

#apps
unbind c
bind c exec gnome-terminal

unmanage panel
set border 0
set padding 0 24 0 0

exec xsetroot -solid "#000000"
exec pcmanfm -d --desktop-off
exec autocutsel &
exec lxpanel
exec nm-applet
exec gnome-terminal
exec gnome-terminal
exec google-chrome
exec skype
exec skype-call-recorder
exec $HOME/.dropbox-dist/dropboxd &
